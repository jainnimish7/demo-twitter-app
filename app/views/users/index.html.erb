<h2>All User</h2>
<ul>
  <% @users.each do |user| %>
    <li>
      <%= link_to user.email, user_path(user.id) %>
      <div id="follower">
        <%= render 'follow', {user: user } %>
      </div>
    </li>
  <% end %>
</ul>

<h2>All Tweets</h2>

<ul>
  <% @all_tweets.each do |tweet| %>
    <li><%= link_to tweet.user.email, user_path(tweet.user.id) %></li>
    <p><%= tweet.title %></p>
    <p><%= tweet.description %></p>
  <% end %>
</ul>
