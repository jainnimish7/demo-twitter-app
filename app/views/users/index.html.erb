<h2>All User</h2>
<ul>
  <% @users.each do |user| %>
    <li>
      <%= link_to user.email, 'javascript:void(0)' %>
      <% if current_user.present? %>
        <% if current_user.user_following?(current_user.id, user) %>
          <%= button_to "Unfollow", unfollow_user_path(user.id), method: :post, remote: true %>
        <% else %>
          <%= button_to "Follow", follow_user_path(user.id), method: :post, remote: true %>
        <% end %>
      <% end %>
    </li>
  <% end %>
</ul>

<h2>All Tweets</h2>

<ul>
  <% @all_tweets.each do |tweet| %>
    <li><%= link_to tweet.user.email, 'javascript:void(0)' %></li>
    <p><%= tweet.title %></p>
    <p><%= tweet.description %></p>
  <% end %>
</ul>
